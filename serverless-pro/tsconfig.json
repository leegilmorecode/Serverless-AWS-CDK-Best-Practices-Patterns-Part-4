{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "types": ["node"],
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["./lib/**/*ts"],
  "exclude": [
    "node_modules",
    "../client/node_modules",
    "cdk.out",
    "../client/cypress.config.ts",
    "../client/cypress",
    "../client",
    "**/*.cy.tsx"
  ],
  "files": ["../client/cypress.config.ts"]
}
